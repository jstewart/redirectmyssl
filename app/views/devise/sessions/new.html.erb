<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <div>
      <h2 class="mt-6 text-center text-3xl leading-9 font-extrabold text-gray-900">
        Sign in
      </h2>
    </div>
    <%= form_for(resource, as: resource_name,
               url: session_path(resource_name), 
               html: { class: "mt-8" }) do |f| %>
    <div class="rounded-md shadow-sm">
      <div>
        <%= f.email_field :email, 
                      autofocus: true, 
                      autocomplete: "email", 
                      required: true,
                      class: "relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:z-10 sm:text-sm sm:leading-5",
                      placeholder: "Email Address",
                      "aria-label": "Email Address" %>
      </div>

      <div class="-mt-px">
        <%= f.password_field :password, 
                             autocomplete: "current-password",
                             placeholder: "Password",
                             class: "relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:z-10 sm:text-sm sm:leading-5",
                             "aria-label": "Password" %>
      </div>

      <div class="mt-6 flex items-center justify-between">
        <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "form-checkbox h-4 w-4 text-blue-600 transition duration-150 ease-in-out" %>
          <%= f.label :remember_me, class: "ml-2 block text-sm leading-5 text-gray-900" %>
        </div>
        <% end %>

        <div class="text-sm leading-5">

          <%= link_to "Forgot your password?", 
                      new_password_path(resource_name),
                      class: "font-medium text-blue-600 hover:text-blue-500 focus:outline-none focus:underline transition ease-in-out duration-150" %>
        </div>
      </div>

      <div class="mt-6">
        <button type="submit" class="relative group btn-primary">
          <span class="absolute left-0 inset-y-0 flex items-center pl-3">
            <svg class="h-5 w-5 text-blue-500 group-hover:text-blue-400 transition ease-in-out duration-150" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
            </svg>
          </span>
          Sign in
        </button>
      </div>
      <% end %>
    </div>
  </div>