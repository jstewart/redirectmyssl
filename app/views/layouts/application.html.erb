<!DOCTYPE html>
<html>

<head>
  <title>Redirectmyssl - The greatest SSL Redirector in the Universe</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body class="min-h-screen bg-gray-100">
  <%= render partial: 'layouts/nav' %>
  <div class="container mx-auto">
    <% if flash.any? %>
    <div class="flashes flex flex-col justify-center py-4 px-4 sm:px-6 lg:px-8">
      <% if notice %>
      <div id="notice" class="text-green-500 rounded-md bg-green-200 border-green-500 p-3 mb-2 font-semibold">
        <%= notice %>
      </div>
      <% end %>
      <% if alert %>
      <div id="alert" class="text-red-500 rounded-md bg-red-200 border-orange-500 p-3 mb-2 font-semibold">
        <%= alert %>
      </div>
      <% end %>
    </div>
    <% end %>

    <%= yield %>
  </div>
</body>

</html>